# vim: filetype=gitconfig

[user]
    name = Gustavo Pantuza
    email = gustavopantuza@gmail.com
    # Export it with gpg: gpg --list-secret-keys --keyid-format LONG
    signingkey = {YOUR_KEY_ID}
[branch]
    autosetuprebase = always
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    ci = commit
    st = status
    ap = add --patch
    br = branch
    co = checkout
    df = diff
    lg = log --patch
    who = shortlog -s --
[core]
	editor = /usr/bin/vim
[commit]
    verbose = true

# Used for Golang mod to always switch from https to git/ssh protocol
[url "git@gitlab.com:"]
    insteadOf = https://gitlab.com
